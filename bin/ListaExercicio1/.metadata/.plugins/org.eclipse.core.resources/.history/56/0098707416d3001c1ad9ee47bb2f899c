/**
 * Uma empresa faz uma pesquisa para saber se as pessoas gostaram ou não de um
 * novo produto lançado no mercado. A resposta, portanto, era "sim" ou "não".]
 * Calcule e escreva o numero de pessoas que responderam "sim" e o numero de pessoas
 * que responderam "não". Simule 5 pessoas.
 */
package ListaExercicio2;
import java.io.IOException;
import java.util.Scanner;

/**
 * @author guest01
 *
 */
public class Exercicio5 {

	

	

	

	/**
	 * @param args
	 * @param salario 
	 * @param filho 
	 * @param salar 
	 * @param filh 
	 * @throws IOException 
	 */
	public static void main(String[] args){
		int pessoas1 = 0;
		int pessoass1 = 0;
		
		
		
		Scanner teclado = new Scanner(System.in);
		
		
		for(int i = 0 ; i<5; i++) {
			System.out.println("Você gostou do novo Produto (S ou N):");
			short pesq = teclado.nextShort();
			if(pesq == 'S') {
				pessoas1 = pessoas1+1;
			} else {
				pessoass1 = pessoass1+1;
				
			}
			
		}
		System.out.println(pessoas1+" responderam Sim e "+pessoass1+" responderam Não!");

	}

}
