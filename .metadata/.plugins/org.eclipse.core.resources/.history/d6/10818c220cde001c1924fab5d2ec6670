							lavC = lavC + 20;
							System.out.println("Estágio 5 - Em Centrifuga: " + lavC + "%");
							Thread.sleep(1000);
						}
						System.out.println("                                      ");
						System.out.println("Simulação Finalizada");
						break;
					}
					case 4: {
						lavE = 0;
						lavC = 0;
						agua = 0;
						for (int i = 0; i < 5; i++) {
							agua = agua + 20;
							System.out.println("Enchendo a Maquina com Água: " + agua + "%");
							Thread.sleep(1000);

						}
						System.out.println("                                      ");
						for (int i = 0; i < 5; i++) {
							lavE = lavE + 20;
							System.out.println("Estágio 4 - Em Enxague " + lavE + "%");
							Thread.sleep(1000);

						}
						System.out.println("                                      ");
						for (int i = 0; i < 5; i++) {
							lavC = lavC + 20;
							System.out.println("Estágio 5 - Em Centrifuga: " + lavC + "%");
							Thread.sleep(1000);
						}
						System.out.println("                                      ");
						System.out.println("Simulação Finalizada");
						break;
