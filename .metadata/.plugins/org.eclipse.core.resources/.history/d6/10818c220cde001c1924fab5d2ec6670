							Thread.sleep(1000);
						}
						System.out.println("                                      ");
						System.out.println("Simulação Finalizada");
						break;
					}
					case 3: {
						lavR = 0;
						lavE = 0;
						lavC = 0;
						agua = 0;
						for (int i = 0; i < 5; i++) {
							agua = agua + 20;
							System.out.println("Enchendo a Maquina com Água: " + agua + "%");
							Thread.sleep(1000);

						}
						System.out.println("                                      ");
						for (int i = 0; i < 5; i++) {
							lavR = lavR + 20;
							System.out.println("Estágio 3 - Em Lavação Leve: " + lavR + "%");
							Thread.sleep(2000);

