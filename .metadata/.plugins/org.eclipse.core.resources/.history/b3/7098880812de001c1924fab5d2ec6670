 */
public class Exercicio1 {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		int matri = 0, matriP = 0, menorP = 0;
		String nome = "";
		double peso = 0, maiorP = 0, menorP1 = 0;
		char sex;
		int idade = 0, mediaI = 0, i = 0, mediaIdade = 0;
		Scanner teclado = new Scanner(System.in);
		
		do {
			System.out.println("Digite a matricula:");
			matri = teclado.nextInt();
			System.out.println("Digite o nome:");
			nome = teclado.nextLine();
			nome = teclado.nextLine();
			System.out.println("Digite o sexo (M ou F:");
			sex = nextcharAt();
			System.out.println("Digite a idade do atleta:");
			idade = teclado.nextInt();
			
			if (peso > peso) {
				maiorP = peso;
				matriP = matri;				
			}else if(sex == 'F') {
				mediaI = idade+(idade);
				i++;
			}else if(peso < peso) {
				menorP1 = peso;
				matriP = matri;
			}
			mediaIdade = mediaI/i;
			System.out.println("O peso e a matricula do atleta mais pesado é: Peso: "+maiorP+" Matricula: "+matriP);
			System.out.println("A média de idade dos atletas do sexo feminino é: "+mediaIdade);
			System.out.println("A matricula e o peso do atleta masculino de menor peso é: Peso: "+menorP+" Matricula: "+menorP);
			
			
		}while (matri != 0);
		

	}

	private static char nextcharAt() {
		// TODO Auto-generated method stub
		return 0;
	}

	private static char charAt() {
		// TODO Auto-generated method stub
		return 0;
	}

}
